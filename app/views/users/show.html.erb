<% provide(:title, @user.name) %>
<%= render 'follow_form' if signed_in? %>
<%= stylesheet_link_tag 'profile', :media => 'screen' %>
<div class="row">
  <div class="panel panel-default col-md-2">
    <div class="panel-body">
      <img src="http://placehold.it/150x150">
      <p><%= @user.name + " " + @user.email %></p>
      <%= link_to "Edit Profile",  edit_user_path(@user), class: "btn btn-large btn-primary" %>
      <%= link_to "New Post",  new_post_path, class: "btn btn-large btn-primary" %>
    </div>
  </div>
  <div class="col-md-8">
    <h1><%= @user.name + "'s Profile"%></h1>
  </div>
</div>

<div class="container">
<% @user.posts.each do |post| %>
  <div class="row">
	  <div class="panel panel-default col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
      <div class="panel-body">
        <p><%= post.title %></p>
        <p><%= post.text %></p> 
        <p><%= link_to 'Edit', edit_post_path(post) %></p>
        <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
	  </div>
  </div>
<% end %>
</div>
