<%= stylesheet_link_tag 'sign_up', :media => 'screen' %>
<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Sign Up Here</h2>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			
      <%= f.text_field :name, class: 'input-text input-block-level', placeholder: 'Name' %>
      <%= f.text_field :email, class: 'input-text input-block-level', placeholder: 'Email' %>
      <%= f.password_field :password, class: 'input-text input-block-level', placeholder: 'Password' %>
      <%= f.password_field :password_confirmation, class: 'input-text input-block-level', placeholder: 'Password Confirmation' %>

			<%= f.submit "Create my account", class: "btn btn-primary" %>
		<% end %>
    </div>
	</div>
</div>
