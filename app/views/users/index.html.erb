<h1>All Users</h1>

<%= will_paginate %>

<ul class="users">
	<% @users.each do |user| %>
		<li>
			<%= user.name %><%= user.email %>
			| <%= link_to "Show", user %>
			| <%= link_to "Destroy", user, method: :delete %>
		</li>
	<% end %>
</ul>

