<% provide(:title, "Sign In") %>
<%= stylesheet_link_tag 'sign_up', :media => 'screen' %>

  <div class="container">
      <div class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
		      <%= form_for(:session, url: sessions_path) do |f| %>
			    <%= f.text_field :email, class: 'input-text input-block-level', placeholder: 'Email Address' %>
			    <%= f.password_field :password, class: 'input-text input-block-level', placeholder: 'Password' %>
			    <%= f.submit "Sign In", class: 'btn btn-primary' %>
		      <% end %>
		    <br>	
		  <p>New User? <%= link_to 'Sign Up', signup_path %></p>
	  </div>
  </div>

