<% provide(:title, "Sign In") %>
  <div class="row">
	  <div class="panel panel-default col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <div class="panel-body">
        <h1>Sign In</h1>
		      <%= form_for(:session, url: sessions_path) do |f| %>
	
			    <%= f.label :email, class: 'control-label' %>
			    <%= f.text_field :email, class: 'form-control' %>

			    <%= f.label :password, class: 'control-label' %>
			    <%= f.password_field :password, class: 'form-control' %>

			    <%= f.submit "Sign In", class: 'btn btn-lg btn-primary' %>
		      <% end %>
		    <br>	
		  <p>New User? <%= link_to 'Sign Up', signup_path %></p>
	  </div>
  </div>
</div>
